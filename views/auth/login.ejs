<%- include('../partials/header', { title: title, user: user }) %>

<style>
   
    .navbar {
        display: none;
    }
    
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: 100vh;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    main {
        margin: 0;
        padding: 0;
    }
    .auth-container {
        position: relative;
        overflow: hidden;
    }

    .auth-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(79, 70, 229, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(139, 92, 246, 0.02) 0%, transparent 50%);
        z-index: 0;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <!-- Logo Section -->
        <div class="auth-logo">
            <div class="logo-icon">üîç</div>
            <h1>CUI Lost & Found</h1>
            <p class="logo-subtitle">Reconnecting what's lost</p>
        </div>
        
        <!-- Header Section -->
        <div class="auth-header">
            <h2>Welcome Back</h2>
            <p>Sign in to access your account</p>
        </div>
        
        <!-- Error Alert -->
        <% if (error) { %>
            <div class="alert alert-error">
                <span class="alert-icon">‚ö†Ô∏è</span>
                <div class="alert-content">
                    <strong>Authentication Error</strong>
                    <span class="alert-text"><%= error %></span>
                </div>
            </div>
        <% } %>

        <!-- Login Form -->
        <form action="/auth/login" method="POST" class="auth-form" autocomplete="off">
            <div class="form-group">
                <label for="email">University Email</label>
                <div class="input-container">
                    <span class="input-icon">üìß</span>
                    <input type="email" id="email" name="email" required 
                           placeholder="your.email@comsats.edu.pk"
                           class="input-field">
                    <div class="input-focus-border"></div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-container">
                    <span class="input-icon">üîí</span>
                    <input type="password" id="password" name="password" required 
                           placeholder="Enter your password"
                           class="input-field">
                    <div class="input-focus-border"></div>
                </div>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="form-options">
                <label class="checkbox-container">
                    <input type="checkbox" name="remember">
                    <span class="checkmark"></span>
                    Remember me
                </label>
                <a href="/auth/forgot-password" class="forgot-link">Forgot password?</a>
            </div>
            
            <button type="submit" class="btn-auth-primary">
                <span class="btn-icon">‚Üí</span>
                <span class="btn-text">Sign In</span>
                <div class="btn-loading-spinner"></div>
            </button>
        </form>

        <!-- Divider -->
        <div class="auth-divider">
            <span>New to CUI Lost & Found?</span>
        </div>
        
        <!-- Footer Links -->
        <div class="auth-footer">
            <a href="/auth/register" class="btn-auth-secondary">
                Create new account -
            </a>
            <a href="/" class="back-home-link">
                 Back to home
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>